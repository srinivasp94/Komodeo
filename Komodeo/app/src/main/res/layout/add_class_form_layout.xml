<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/add_class_form_bg"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.iprismtech.komodeo.customtextview.MyCustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Add New Class"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/iv_close_add_class_form"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/close_with_blue_background" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <com.iprismtech.komodeo.customtextview.MyCustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject Name"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <com.iprismtech.komodeo.customtextview.CustomEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_bg"
                android:backgroundTint="@color/white"
                android:id="@+id/edtSubName"
                android:hint="Ex.Accounting"
                android:padding="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/ll_course_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="vertical">


                    <com.iprismtech.komodeo.customtextview.MyCustomFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Course Name"

                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <com.iprismtech.komodeo.customtextview.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:id="@+id/edtCourseName"
                        android:background="@drawable/edittext_bg"
                        android:backgroundTint="@color/white"
                        android:hint="Accy"
                        android:padding="10dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/ll_course_layout"
                    android:layout_weight="0.4"
                    android:orientation="vertical">


                    <com.iprismtech.komodeo.customtextview.MyCustomFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Course #"

                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <com.iprismtech.komodeo.customtextview.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittext_bg"
                        android:backgroundTint="@color/white"
                        android:gravity="center"
                        android:hint="100"
                        android:id="@+id/edtCourse"
                        android:padding="10dp" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <com.iprismtech.komodeo.customtextview.MyCustomFontTextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/sign_in_btn_bg"
        android:gravity="center"
        android:paddingTop="@dimen/_10sdp"
        android:id="@+id/txtSaveNewClass"
        android:text="SAVE"
        android:paddingBottom="@dimen/_5sdp"
        android:textColor="@color/white"
        android:textSize="18dp" />


</LinearLayout>