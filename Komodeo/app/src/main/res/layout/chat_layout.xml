<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#d3d3d3">


        <ImageView
            android:id="@+id/iv_chatback"
            android:layout_width="30dp"

            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/chatback" />

        <com.iprismtech.komodeo.customtextview.MyCustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Richard Reddy"
            android:textColor="@color/black"
            android:textSize="18dp" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:padding="10dp">

            <!--    <View
                    android:id="@+id/avatar"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:scaleType="centerInside"
                    android:layot_width="34dp"
                    android:layout_height="34dp" />-->

            <ImageView
                android:id="@+id/iv_chatprofile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/png" />

            <com.iprismtech.komodeo.customtextview.MyCustomFontTextView
                android:id="@+id/message_body_their"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/iv_chatprofile"
                android:background="@drawable/theirmessage_bg"
                android:padding="5dp"
                android:text="How are you doing? This is a long message that should probably wrap."
                android:textSize="18dp" />

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.iprismtech.komodeo.customtextview.MyCustomFontTextView
                android:id="@+id/message_body_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:background="@drawable/mymessage_bg"
                android:elevation="2dp"
                android:gravity="right"
                android:padding="10dp"
                android:text="How r ya?"
                android:textColor="#fff"
                android:textSize="18dp" />


        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:padding="10dp">

            <!--    <View
                    android:id="@+id/avatar"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:scaleType="centerInside"
                    android:layot_width="34dp"
                    android:layout_height="34dp" />-->

            <ImageView
                android:id="@+id/iv_profile5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/png" />

            <com.iprismtech.komodeo.customtextview.MyCustomFontTextView
                android:id="@+id/message_body5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/iv_profile5"
                android:background="@drawable/theirmessage_bg"
                android:padding="5dp"
                android:text="How are you doing? This is a long message that should probably wrap."
                android:textSize="18dp" />

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.iprismtech.komodeo.customtextview.MyCustomFontTextView
                android:id="@+id/message_body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:background="@drawable/mymessage_bg"
                android:elevation="2dp"
                android:gravity="right"
                android:padding="10dp"
                android:text="How r ya?"
                android:textColor="#fff"
                android:textSize="18dp" />


        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:padding="10dp">

            <!--    <View
                    android:id="@+id/avatar"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:scaleType="centerInside"
                    android:layot_width="34dp"
                    android:layout_height="34dp" />-->

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/png" />

            <com.iprismtech.komodeo.customtextview.MyCustomFontTextView
                android:id="@+id/message_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/iv_profile"
                android:background="@drawable/theirmessage_bg"
                android:padding="5dp"
                android:text="How are you doing? This is a long message that should probably wrap."
                android:textSize="18dp" />

        </RelativeLayout>

        <!--  <ListView
              android:id="@+id/lv_chats"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

          </ListView>-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:orientation="horizontal"
        android:weightSum="2.3">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="#d3d3d3"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_cam"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="45dp"
                android:src="@drawable/cameraicon" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_cam"
                android:src="@drawable/gal" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="#d3d3d3"
            android:orientation="horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/iv_search"
                android:background="@drawable/sendtext_bg"
                android:hint="Aa"
                android:padding="10dp" />


        </LinearLayout>

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:background="#d3d3d3"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical|center_horizontal"
                android:src="@drawable/send" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>