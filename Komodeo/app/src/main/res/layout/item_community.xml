<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5sdp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/iv_community_post_layout"
                android:layout_width="50dp"
                android:layout_height="51dp"
                android:src="@drawable/png" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/frame_layout"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Abhinav Che"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_subject"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_name"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/frame_layout"
                android:text="Political Science" />
        </LinearLayout>
        <!--<TextView-->
        <!--android:id="@+id/txt_mutual_friends"-->

        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@id/txt_subject"-->
        <!--android:layout_marginLeft="5dp"-->
        <!--android:layout_toRightOf="@id/frame_layout"-->
        <!--android:text="mutual friends" />-->


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_add_frd"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginRight="5dp"
                android:src="@drawable/addfriends" />

            <ImageView
                android:id="@+id/iv_request_sent"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginRight="5dp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/ic_frd_sent" />

            <ImageView
                android:id="@+id/iv_frd_confirmed"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_friend_confirmed" />


            <ImageView
                android:id="@+id/iv_chat"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="5dp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/ic_message" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>