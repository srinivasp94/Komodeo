<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="5dp">

        <!--<FrameLayout-->
        <!--android:id="@+id/frame"-->
        <!--android:layout_width="@dimen/_40sdp"-->
        <!--android:layout_height="@dimen/_40sdp"-->
        <!--android:layout_centerVertical="true">-->


        <!--<ImageView-->
        <!--android:id="@+id/iv_noti_img"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--android:src="@drawable/png" />-->


        <!--</FrameLayout>-->

        <RelativeLayout
            android:id="@+id/rl_noti_titleandtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/frame"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/ll_noti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/txt_noti_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="Cindy rose sent you a friend request"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_noti_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="12 mins ago" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_noti_disc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_noti"
                android:text="Static text" />


        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>