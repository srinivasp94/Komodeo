<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <ImageView
        android:id="@+id/iv_calendar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:src="@drawable/png" />


    <TextView
        android:id="@+id/txt_dayofweek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/iv_calendar"
        android:text="Today"
        android:textColor="#4023f3"
        android:textSize="15dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/txt_timings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_dayofweek"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/iv_calendar"
        android:text="10 AM - 11 AM"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/iv_location"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/txt_timings"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_calendar"
        android:src="@drawable/currentlocation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_timings"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_location"
        android:text="Gregor Library" />


    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/txt_timings"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/right" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_users"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/users" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/iv_users"
            android:text="3"
            android:textSize="16dp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>