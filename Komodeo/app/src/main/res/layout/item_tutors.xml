<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_tutorevent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_1sdp"
    app:cardElevation="@dimen/_1sdp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:padding="@dimen/_2sdp">

        <LinearLayout
            android:id="@+id/frame_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_post_layout"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:src="@drawable/boy" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtRating"
                    style="@style/custom_textview"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="right|bottom"
                    android:layout_marginLeft="@dimen/_35sdp"
                    android:background="@drawable/star_frame"
                    android:gravity="center"
                    android:text="0.0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp" />
            </FrameLayout>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_personName"
                style="@style/custom_textview"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_margin="@dimen/_1sdp"
                android:background="@drawable/edittext_bg"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_toLeftOf="@+id/ll_right"
            android:layout_toRightOf="@+id/frame_layout"
            android:gravity="center|left"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_name"
                style="@style/custom_item_textview"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_subject"
                style="@style/custom_item_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00 AM - 00:00 AM"
                android:textColor="@color/gray"
                android:textSize="@dimen/_12sdp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_loc"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:src="@drawable/loc_green" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txt_mutual_friends"
                    style="@style/custom_item_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_loc"
                    android:text="Address "
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/_3sdp"
            android:gravity="center"
            android:orientation="vertical">


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtMax"
                style="@style/custom_item_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max 0"
                android:textSize="@dimen/_12sdp" />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_price"
                style="@style/custom_item_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="$ 00"
                android:textSize="@dimen/_12sdp" />


            <ImageView
                android:id="@+id/create_tutor_event"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:src="@drawable/rightarrow_gray" />


        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>