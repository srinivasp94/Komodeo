<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/color_88</item>
        <item name="colorControlActivated">@color/gray</item>
    </style>

    <style name="custom_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/_3sdp</item>
        <item name="android:textColor">@color/color_88</item>
        <item name="android:fontFamily">@fonts/tunga</item>
        <item name="android:padding">@dimen/_3sdp</item>

        <item name="android:textSize">@dimen/_14sdp</item>
    </style>
    <style name="CustomEdittext" parent="Theme.AppCompat">

    <style name="custom_item_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/_1sdp</item>
        <item name="android:textColor">@color/color_88</item>
        <item name="android:fontFamily">@fonts/tunga</item>
        <item name="android:padding">@dimen/_1sdp</item>
    <item name="backgroundTint">@color/transparent</item>
    <item name="singleLine">true</item>
        <item name="android:textSize">@dimen/_13sdp</item></style>

        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="custom_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginTop">@dimen/_3sdp</item>
        <item name="android:background">@color/view_color</item>
    </style>
</resources>
